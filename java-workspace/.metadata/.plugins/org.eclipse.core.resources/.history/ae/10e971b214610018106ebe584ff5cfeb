import java.math.BigDecimal;
import java.util.Arrays;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int num = sc.nextInt();	// 테스트 케이스 갯수.

		int[] num1 = {1};
		int[] num3 = {3, 9, 7, 1};
		int[] num7 = {7, 9, 3, 1};
		int[] num9 = {9, 1};
		
		int[] numA = new int[num];
		int[] numB = new int[num];
		int[] numC = new int[num];
		for(int i=0; i<num; i++) {
			numA[i] = sc.nextInt();
			numB[i] = sc.nextInt();
		}
		
		for(int i=0; i<num; i++) {
			if(numA[i] == 1) {
				numC[i] = 1;
			} else if(numA[i] == 3) {
				numC[i] = numB[i] % 4;
			} else if(numA[i] == 7) {
				numC[i] = numB[i] % 4;
			} else if(numA[i] == 9) {
				numC[i] = numB[i] % 2;
			}
			System.out.println(numC[i]);
		}
	}
}