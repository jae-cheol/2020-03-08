import java.util.Scanner;

public class Sb_1032 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();		// 입력할 문자 갯수.
		String[] aString = new String[num];
		for(int i=0; i<num; i++) {
			aString[i] = sc.next();	// 입력한 문자들.
		}
		
		int nlength = aString[0].length();	// 입력한 문자 길이.
		

		int nMax = 50;
		int nMin = 0;
		if(num < 2) {
			nMax = nlength;
		} else {
			for(int j=0; j<num-1; j++) {	// 앞자리 확인.
				for(int i=0; i<nlength; i++) {
//					System.out.println("aString[j].charAt(i) : " + aString[j].charAt(i));
//					System.out.println("aString[j+1].charAt(i) : " + aString[j+1].charAt(i));
					if( aString[j].charAt(i) != aString[j+1].charAt(i) ) {
						if(nMax > i) {
							nMax = i;
						}
						break;
					}
				}
			}
			for(int j=0; j<num-1; j++) {	// 뒷자리 확인.
				for(int i=nlength; i>0; i--) {
//					System.out.println("aString[j].charAt(i-1) : " + aString[j].charAt(i-1));
//					System.out.println("aString[j+1].charAt(i-1) : " + aString[j+1].charAt(i-1));
					if(i == nlength) {
						if(nMin > nlength-i) {
							nMin = nlength-i;
//							System.out.println("nMin : " + nMin);
						}
					}
					if( aString[j].charAt(i-1) != aString[j+1].charAt(i-1) ) {
						if(nMin < nlength-i) {
							nMin = nlength-i;
//							System.out.println("nMin : " + nMin);
						}
						break;
					}
				}
			}
		}

//		System.out.println("nMax : " + nMax);
//		System.out.println("nMin : " + nMin);
		
		StringBuilder s1 = new StringBuilder(aString[0].substring(0, nMax));	// 앞자리
		StringBuilder s2 = new StringBuilder(aString[0].substring(nlength-nMin, nlength));	// 뒷자리
		s1.append(s2);
		
		for(int i=0; i<nlength-nMax-nMin; i++) {
			s1.insert(nMax, "?");
		}
		
		System.out.println(s1);
	}

}
